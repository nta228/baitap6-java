<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://xmlns.jcp.org/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_4_0.xsd"
         version="4.0">
    <servlet>
        <servlet-name>Hello</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.HelloServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Hello</servlet-name>
        <url-pattern>/hello</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>Goodbye</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.GoodbyeServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>Goodbye</servlet-name>
        <url-pattern>/goodbye</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>RegisterServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.RegisterServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>RegisterServlet</servlet-name>
        <url-pattern>/register</url-pattern>
    </servlet-mapping>

    <!-- Product Management -->
    <servlet>
        <servlet-name>CreateProductServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.product.CreateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateProductServlet</servlet-name>
        <url-pattern>/admin/products/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListProductServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.product.ListProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductServlet</servlet-name>
        <url-pattern>/admin/products/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailProductServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.product.DetailProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailProductServlet</servlet-name>
        <url-pattern>/admin/products/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateProductServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.product.UpdateProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateProductServlet</servlet-name>
        <url-pattern>/admin/products/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteProductServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.product.DeleteProductServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteProductServlet</servlet-name>
        <url-pattern>/admin/products/delete</url-pattern>
    </servlet-mapping>

    <!-- End of Product Management -->

    <!-- Category Management -->
    <servlet>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.category.CreateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>CreateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/create</url-pattern>
    </servlet-mapping>

    <servlet>
        <servlet-name>ListCategoryServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.category.ListCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/list</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DetailCategoryServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.category.DetailCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DetailCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/detail</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.category.UpdateCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>UpdateCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/update</url-pattern>
    </servlet-mapping>
    <servlet>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.admin.category.DeleteCategoryServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>DeleteCategoryServlet</servlet-name>
        <url-pattern>/admin/categories/delete</url-pattern>
    </servlet-mapping>

    <!-- End of Category Management -->

    <!-- Start Client Management -->
    <servlet>
        <servlet-name>ListProductClientServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.client.ListProductClientServlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>ListProductClientServlet</servlet-name>
        <url-pattern>/products</url-pattern>
    </servlet-mapping>
    <!-- End of client servlet -->
    <filter>
        <filter-name>DemoFilter2</filter-name>
        <filter-class>fpt.aptech.t2009m1helloworld.filterdemo.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DemoFilter2</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>DemoFilter</filter-name>
        <filter-class>fpt.aptech.t2009m1helloworld.filterdemo.MyFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>DemoFilter</filter-name>
        <url-pattern>/*</url-pattern>
    </filter-mapping>
    <filter>
        <filter-name>AdminFilter</filter-name>
        <filter-class>fpt.aptech.t2009m1helloworld.filterdemo.AdminFilter</filter-class>
    </filter>
    <filter-mapping>
        <filter-name>AdminFilter</filter-name>
        <url-pattern>/admin/*</url-pattern>
        <url-pattern>/admin/**</url-pattern>
    </filter-mapping>

    <servlet>
        <servlet-name>LoginServlet</servlet-name>
        <servlet-class>fpt.aptech.t2009m1helloworld.controller.LoginSevlet</servlet-class>
    </servlet>
    <servlet-mapping>
        <servlet-name>LoginServlet</servlet-name>
        <url-pattern>/login</url-pattern>
    </servlet-mapping>
</web-app>